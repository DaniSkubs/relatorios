<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório Automatizado</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; padding: 20px; }
        .container { max-width: 800px; margin: auto; }
        .section { margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; }
        h2 { background-color: #f4f4f4; padding: 10px; border-radius: 5px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Relatório Automatizado</h1>
        
        <div class="section">
            <h2>Resumo</h2>
            <p id="resumo">Carregando...</p>
        </div>
        
        <div class="section">
            <h2>Dados Gerais</h2>
            <ul id="dados-gerais">
                <li>Carregando...</li>
            </ul>
        </div>
    </div>
    
    <script>
        async function carregarDados() {
            try {
                const resposta = await fetch('https://raw.githubusercontent.com/daniskubs/relato/main/dados.json');
                const dados = await resposta.json();
                
                document.getElementById('resumo').textContent = dados.resumo;
                
                const lista = document.getElementById('dados-gerais');
                lista.innerHTML = '';
                dados.dadosGerais.forEach(item => {
                    const li = document.createElement('li');
                    li.textContent = item;
                    lista.appendChild(li);
                });
            } catch (error) {
                document.getElementById('resumo').textContent = 'Erro ao carregar os dados.';
                console.error('Erro ao carregar JSON:', error);
            }
        }
        
        carregarDados();
    </script>
</body>
</html>
